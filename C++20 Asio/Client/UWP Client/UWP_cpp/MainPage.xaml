<Page
    x:Class="UWP_cpp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_cpp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid KeyDown="Grid_KeyDown">

        <TextBox x:Name="ChatInput" Margin="10,0,220,10" Text="" TextWrapping="Wrap" Height="45" VerticalAlignment="Bottom"/>
        <Button x:Name="SendMessageButton" Content="Enter" Margin="0,0,10,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="45" Width="205" Click="SendMessageButton_Click"/>
        <TextBox x:Name="TextView" Margin="10,10,10,60" Text="" TextWrapping="Wrap" IsReadOnly="True"/>
    </Grid>
</Page>
